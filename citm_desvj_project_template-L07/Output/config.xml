<config>
  <app>
    <title>Misco Jones Adventures by ADVENTURES JOKES STUDIO</title>
    <organization>UPC</organization>
	<frcap value ="16" value2 ="33"/>
  </app>

  <renderer>
    <vsync value ="true"/>
  </renderer>

  <window>
    <resolution width="1024" height="640" scale="1"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <audio>
    <music volume="75"/>
    <fx volume="128"/>
  </audio>

  <ui>
  	<font1 texturepath="Assets/Textures/font1.png"/>
  	<font2 texturepath="Assets/Textures/font2.png"/>
  </ui>
	
  <logo>
  	<backgroundimage texturepath="Assets/Textures/LogoScreen.png"/>
  	<music musicPath="Assets/Audio/Music/logoedit.ogg"/>
  </logo>

  <title>
  	<backgroundimage texturepath="Assets/Textures/TitleScreen.png"/>
  	<music musicPath="Assets/Audio/Music/title_screen.ogg"/>
  	<startsfx startSFXPath="Assets/Audio/Fx/start_game.wav"/>
  </title>
	
  <!-- L02: DONE: Add an element for the entity manager and add the player parameters -->
  <scene>
    <!-->player x="150" y="672" texturepath="Assets/Textures/player1.png"/-->
	<originTexture origintexturePath = "Assets/Maps/x.png" />
	<pathfinding  slimePathTile="Assets/Textures/Slime/path.png" />
	<music musicPath="Assets/Audio/Music/song1.ogg" />
	<scenesfx selectSFXPath="Assets/Audio/Fx/select.wav" />
	<slimesfx stompSFXPath="Assets/Audio/Fx/stomp.wav" powerUpSFXPath="Assets/Audio/Fx/powerUp.wav" slimeHitSFXPath="Assets/Audio/Fx/slime_hit.wav" />
	<batsfx batHitSFXPath="Assets/Audio/Fx/bat_hit.wav"/>
	<player x="224" y="530" texturepath="Assets/Textures/PlayerJones.png"/>
    <coin x="704" y="329" texturepath="Assets/Textures/bitcoin.png"/>
	<coin x="1312" y="297" texturepath="Assets/Textures/bitcoin.png"/>
	<coin x="2192" y="458" texturepath="Assets/Textures/bitcoin.png"/>
	<coin x="2928" y="170" texturepath="Assets/Textures/bitcoin.png"/>
	<slime x="719" y="339" texturepath="Assets/Textures/Slime/Slime_Spiked_Full.png"/>
	<slime x="2576" y="145" texturepath="Assets/Textures/Slime/Slime_Spiked_Full.png"/>
	<bat x="1504" y="266" texturepath="Assets/Textures/Bat/Bat_Full.png"/>
  </scene>

  <player>
	 <SFXset jumpSFXPath="Assets/Audio/Fx/jump.wav" dieSFXPath="Assets/Audio/Fx/death.wav" hurtSFXPath="Assets/Audio/Fx/hurt.wav"
			 pickCoinSFX="Assets/Audio/Fx/pick_coin.wav" levelCompletedSFXPath="Assets/Audio/Fx/level_completed.wav" selectSFXPath="Assets/Audio/Fx/select.wav"
			 shortRangeAttackSFXPath="Assets/Audio/Fx/whip_attack.wav"/>
  </player>
	
  <ending>
	 <backgroundimage texturepath="Assets/Textures/EndingScreen.png"/>
	 <music musicPath="Assets/Audio/Music/gameOver.ogg"/>
	 <endingsfx startSFXPath="Assets/Audio/Fx/start_game.wav"/>
  </ending>
	
  <map>
    <mapfolder path="Assets/Maps/"/>
    <mapfile path="Assets/Maps/Level1Map.tmx"/>
    <mapfile2 path="Assets/Maps/Level2Map.tmx"/>
  </map>
  
</config>
